<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bulletdev.chameleon.MainHome"
    tools:showIn="@layout/app_bar_main_home"
    android:elevation="0dp"
    android:background="#575757">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configurações"
                android:id="@+id/button7"
                android:onClick="abrirconfig" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destaques"
                android:id="@+id/button" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notícias"
                android:id="@+id/button2" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humor"
                android:id="@+id/button3" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Curiosidades"
                android:id="@+id/button4" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Videos"
                android:id="@+id/button5" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jogos"
                android:id="@+id/button6" />

        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/horizontalScrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Botão Bonito"
                android:id="@+id/button8"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:background="#af2108"
                android:clickable="true"
                android:elevation="2dp" />

            <TextView
                android:layout_width="137dp"
                android:layout_height="259dp"
                android:text="Este é um texto de teste para ver se sua mãe é capaz de ler isso, pois é muito dificil ler e escrever e o analfabetismo é um problema muito grave tanto no brasil como no mundo além da fome na africa, que afeta os africanos que tem fome, pois os que não tem não sobrem o problema da fome na africa"
                android:id="@+id/textView2"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_rowSpan="2"
                android:layout_gravity="fill_vertical"
                android:background="#ffbd09"
                android:layout_margin="3dp" />


            <ImageView
                android:layout_width="203dp"
                android:layout_height="154dp"
                android:id="@+id/imageView2"
                android:layout_row="1"
                android:layout_column="0"
                android:src="@mipmap/ic_chaves"
                android:layout_gravity="fill_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Botaunnnn"
                android:id="@+id/button10"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_columnSpan="2"
                android:singleLine="false" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:id="@+id/imageButton"
                android:layout_row="5"
                android:layout_column="0"
                android:src="@mipmap/ic_himym"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:adjustViewBounds="false" />

        </GridLayout>
    </ScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
